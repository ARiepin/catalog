<h1>Список компаний</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Телефон</th>
      <th>Улица</th>
      <th>Номер дома</th>
      <th>Офис</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% Company.last(3).each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.telephone %></td>
        <td><%= company.street %></td>
        <td><%= company.street_number %></td>
        <td><%= company.apt %></td>
        <td><%= link_to 'Показать', company %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "Все компании", companies_path %>